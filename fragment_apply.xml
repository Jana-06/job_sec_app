<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/nameEditText"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:hint="Phone Number"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/locationEditText"
            android:hint="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/skillsEditText"
            android:hint="Skills (comma separated)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/interestEditText"
            android:hint="Area of Interest"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/resumeFileNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload your resume:"
                android:textColor="#757575"
                android:textSize="16sp" />

            <Button
                android:id="@+id/selectResumeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Resume"
                app:icon="@drawable/outline_cloud_upload_24"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/resumeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No resume selected"
            android:textColor="#212121"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:paddingStart="4dp" />

        <Button
            android:id="@+id/submitButton"
            android:text="Submit Application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#1A73E8"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="12dp"
            android:elevation="2dp" />
    </LinearLayout>
</ScrollView>
